extends layout

block content
  h1 Course Infromation
  form(action="/addCourse",method="post" data-ajax='false')
    label Course name 
    br
    input(type="text",name="name")
    br
    label Course duration
    br
    input(type="text",name="duration")
    br
    label Course description
    br
    textarea(name="description")
    br
    label Amount of participants
    br
    input(type="text",name="participants")
    br
    label Staring date
    br
    script
      $('#start').datepicker();
      $('#end').datepicker();
    input(type="date",name="startDate",id='start')
    br
    label Ending date
    br
    input(type="date",name="endingDate",id='end')
    br
    input(type="submit",value="Send")
    
    